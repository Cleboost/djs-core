{
	"name": "djs-core",
	"type": "module",
	"private": true,
	"version": "6.0.0",
	"workspaces": [
		"packages/*",
		"app"
	],
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@changesets/cli": "^2.29.8",
		"@types/node": "^25.0.3",
		"knip": "^5.76.0",
		"typescript": "^5.9.3"
	},
	"scripts": {
		"knip": "knip",
		"format": "biome format",
		"format:fix": "biome format --write",
		"lint": "biome lint",
		"lint:fix": "biome lint --write",
		"check": "biome check",
		"check:fix": "biome check --write",
		"build": "bun run --filter @djs-core/runtime build && bun run --filter @djs-core/dev build",
		"dev": "bun run --filter @djs-core/runtime dev & bun run --filter @djs-core/dev dev",
		"changeset": "changeset",
		"version-packages": "changeset version",
		"publish-packages": "changeset publish"
	}
}
